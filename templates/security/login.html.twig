{% extends 'base.html.twig' %}



{% block additionnal_body_class %}ls-closed login-page{% endblock %}

{% block content %}
    <div class="login-box">
        <div class="card">
            <div class="header bg-red">
                <h2>Connexion</h2>
            </div>
            <div class="body">
                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <div class="form-line">
                            <input placeholder="Nom d'utilisateur" required name="_username" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
                        </div>
                    </div>
                    <div class="form_group">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                </form>

            </div>

        </div>
    </div>

{% endblock %}