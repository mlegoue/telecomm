{% extends 'base.html.twig' %}

{% block title %}Hello TeleCommController!{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content %}
    <section>
        {% for event in events %}
            <div class = "card">
                <div class="header bg-red">
                    <h2>{{event.name}}</h2>
                </div>
                <div class="body">
                    {% if (event.online == 1) %}
                        <span class="badge bg-green">Accepté</span>
                    {% else %}
                        <span class="badge bg-orange">En cours de vérification</span>
                    {% endif %}
                    <div class="metadata">
                        <p> Evénement entre le {{event.start| date ('d/m/Y')}} à {{ event.start | date('H:i') }}  et le {{ event.end | date ('d/m/Y') }} à {{ event.end | date('H:i') }} </p>
                        <p> Publié par : {{event.addedBy.username}} </p>
                        <p> Lieu : {{ event.location }}</p>
                    </div>
                    <div class="content">
                        <div class="col text-center">
                            <a href="{{ path('event_show',{'id':event.id}) }}" class="btn btn-success">Voir l'événement</a>
                            {% if is_granted('EDIT', event) %}
                                <a href="{{ path('event_edit',{'id':event.id}) }}" class="btn btn-primary">Modifier l'événement</a>
                            {% endif %}
                            {% if is_granted('DELETE', event) %}
                                <a href="#" class="btn btn-danger">Supprimer l'événement</a>
                            {% endif %}
                        </div>
                    </div>
                </div>

            </div>

            <hr>
        {% endfor %}

    </section>

    <div class="pagination">
        {{ knp_pagination_render(events) }}
    </div>

{% endblock %}

