{% extends 'base.html.twig' %}

{% block title %}Hello TeleCommController!{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content %}
    <article>
        <div class = "card">
            <div class="header bg-red">
                <h2>{{event.name}}</h2>
            </div>
            <div class="body">
                {% if (event.online == 1) %}
                    <span class="badge bg-green">Accepté</span>
                {% else %}
                    <span class="badge bg-orange">En cours de vérification</span>
                {% endif %}
                <div class="metadata">
                    <p> Publié entre le {{event.start| date ('d/m/Y')}} à {{ event.start | date('H:i') }}  et le {{ event.end | date ('d/m/Y') }} à {{ event.end | date('H:i') }} </p>
                    <p> Par : {{event.addedBy.username}} </p>
                    <p> Lieu : {{ event.location }}</p>
                </div>
                <div class="content">
                    <div class="col text-center">
                        <a href="#" class="btn btn-primary">Modifier l'événement</a>
                        <a href="#" class="btn btn-danger">Supprimer l'événement</a>

                    </div>
                </div>
            </div>

        </div>

    </article>
{% endblock %}